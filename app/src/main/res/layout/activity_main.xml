<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.sogrey.actionbar.demo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CustomActionBar" />

    <org.sogrey.actionbar.CustomActionBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_action_bar_height"
        android:background="#f00"
        app:leftImage="@mipmap/ic_launcher2"
        app:leftImageVisiable="visible"
        app:leftText="@string/txt_action_bar_title"
        app:midTextFontColor="#fff"
        app:midTextVisiable="visible"
        app:rightImage="@mipmap/next"
        app:rightImageVisible="visible"
        app:titleBarBackground="#11A4A3">

    </org.sogrey.actionbar.CustomActionBar>

</LinearLayout>
