<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/img_custom_action_bar_left"
        android:layout_width="@dimen/dimen_action_bar_img_width"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_action_bar_v_padding"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@id/tv_custom_action_bar_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen_action_bar_v_padding"
        android:text="这里是标题"
        android:textSize="@dimen/dimen_action_bar_title_fontsize" />

    <LinearLayout
        android:id="@id/lyt_custom_action_bar_tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/img_custom_action_bar_right"
            android:layout_width="@dimen/dimen_action_bar_img_width"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_action_bar_v_padding"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>
</merge>
