<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@id/lyt_custom_action_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/img_custom_action_bar_left"
            android:layout_width="@dimen/dimen_action_bar_img_width"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_action_bar_v_padding"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@id/txt_custom_action_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="返回" />
    </LinearLayout>

    <org.sogrey.actionbar.Views.SearchEditText
        android:id="@id/edt_custom_search_bar_center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_action_bar_v_padding"
        android:layout_marginLeft="@dimen/dimen_action_bar_v_padding"
        android:layout_marginTop="@dimen/dimen_action_bar_v_padding"
        android:layout_marginBottom="@dimen/dimen_action_bar_v_padding"
        android:paddingBottom="@dimen/dimen_search_bar_edt_padding_tb"
        android:paddingLeft="@dimen/dimen_search_bar_edt_padding_lr"
        android:paddingRight="@dimen/dimen_search_bar_edt_padding_lr"
        android:paddingTop="@dimen/dimen_search_bar_edt_padding_tb" />


    <LinearLayout
        android:id="@id/lyt_custom_action_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/txt_custom_action_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="提交" />

        <ImageView
            android:id="@id/img_custom_action_bar_right"
            android:layout_width="@dimen/dimen_action_bar_img_width"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_action_bar_v_padding"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</merge>
